<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <!-- Appender para la consola -->
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
        </Console>

        <!-- Appender para archivo con rotación -->
        <RollingFile name="logApp"
                     fileName="src/main/resources/Log/application.log"
                     filePattern="src/main/resources/Log/application-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <!-- Rota el archivo cuando alcance 10 MB -->
                <SizeBasedTriggeringPolicy size="1GB" />
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Logger raíz que aplica a toda la aplicación -->
        <Root level="info">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="logApp" />
        </Root>
    </Loggers>
</Configuration>